<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="400mm"
        android:layout_height="400mm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70mm"
        android:background="@mipmap/login_head_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50mm"
        android:layout_marginTop="480mm"
        android:layout_marginRight="50mm"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100mm">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入用户名"
                android:text="admin"
                android:textSize="28mm" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100mm">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:text="10086"
                android:textSize="28mm" />

            <ImageView
                android:layout_width="40mm"
                android:layout_height="40mm"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32mm"
                android:background="@mipmap/according"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="100mm"
            android:layout_margin="30mm"
            android:background="@drawable/btn_login_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="32mm" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300mm"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/login_bg" />
</RelativeLayout>
