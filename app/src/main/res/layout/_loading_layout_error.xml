<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/retry_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="300mm"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@mipmap/img_nonetwork" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20mm"
        android:singleLine="true"
        android:text="@string/network_error_tips"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#999999"
        android:textSize="28mm" />

    <TextView
        android:id="@+id/network_error_des1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dip"
        android:singleLine="true"
        android:text="@string/network_error_des1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff808080"
        android:visibility="gone" />

    <TextView
        android:id="@+id/retry_button"
        android:layout_width="210mm"
        android:layout_height="70mm"
        android:layout_gravity="center"
        android:layout_marginTop="30mm"
        android:background="@drawable/btn_loading_error"
        android:gravity="center"
        android:visibility="visible"
        tools:text="刷新"
        tools:textColor="@color/white"
        tools:textSize="30mm" />

    <TextView
        android:id="@+id/network_error_des2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/network_error_des2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff808080"
        android:visibility="gone" />

</LinearLayout>